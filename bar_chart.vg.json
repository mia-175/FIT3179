{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 250,
  "height": 250,
  "title": {
    "text": "Education Dimension",
    "fontSize": 20 
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mia-175/FIT3179/main/Education.csv",  
    "format": {"type": "csv"}
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Country",
      "type": "nominal",
      "axis": {"labelAngle": 270},
      "sort": {
        "field": "Mean years of schooling", 
        "op": "sum",
        "order": "descending"}
    },
    "y": {
      "field": "Mean years of schooling",
      "type": "quantitative"
    },
    "color": {
      "field": "Mean years of schooling",
      "type": "quantitative",
      "title": "years",
      "scale": {
        "scheme": "yellowgreenblue"
      }
    }
  }
}

  