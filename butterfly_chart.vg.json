{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Education Dimension",
    "fontSize": 18 
  },
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/mia-175/FIT3179/main/Education.csv"
  },
  "transform": [
    {
      "fold": ["Mean years of schooling", "Expected years of schooling"],
      "as": ["Type", "Years"]
    },
    {
      "calculate": "datum.Type === 'Mean years of schooling' ? -datum.Years : datum.Years",
      "as": "AdjustedYears"
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Country",
      "type": "nominal",
      "sort": {
        "field": "Mean years of schooling",
        "op": "sum",
        "order": "descending"
      },
      "axis": {"title": null}
    },
    "x": {
      "field": "AdjustedYears",
      "type": "quantitative",
      "title": "Years of Schooling",
      "scale": {
        "domain": [-15, 15] 
      },
      "axis": {
        "labelExpr": "abs(datum.value)"
      }
    },
    "color": {
      "field": "Type",
      "scale": {
        "scheme": "yellowgreenblue"
      },
      "legend": {
        "title": null,
        "orient": "bottom"
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {"field": "Years", "type": "quantitative", "title": "Years of Schooling"}
    ]
  },
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false},
    "background": "#f2f2f2"
  }
}