{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "HDI by Country",
    "fontSize": 20 
  },
  "width": 700,
  "height": 350,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "HDI_Category_Selection",
      "bind": {
        "input": "select",
        "options": [null, "Very High", "High", "Medium", "Low"],
        "labels": ["Show All", "Very High", "High", "Medium", "Low"],
        "name": "Human Development Category: "
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "geoshape", "stroke": "gray", "strokeWidth": 0.5},
      "data": {"graticule": true}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mia-175/FIT3179/refs/heads/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mia-175/FIT3179/main/HDI.csv"
            },
            "key": "Country",
            "fields": ["HDI", "hdicode"]
          }
        },
        {
          "calculate": "datum.HDI != null ? datum.HDI : 'N/A'",
          "as": "HDI_display"
        },
        {
          "filter": "HDI_Category_Selection == null || datum.hdicode == HDI_Category_Selection"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "HDI",
          "type": "quantitative",
          "scale": {"type": "linear", "scheme": "greenblue"}
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "HDI", "type": "quantitative"},
          {"field": "hdicode", "type": "nominal", "title": "HDI Category"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "background": "#f2f2f2"
  }
}
