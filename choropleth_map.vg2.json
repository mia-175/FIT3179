{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "HDI By Country",
    "fontSize": 20 
  },
  "width": 700,
  "height": 350,
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mia-175/FIT3179/refs/heads/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/mia-175/FIT3179/main/HDI.csv"
            },
            "key": "Country",
            "fields": ["HDI"]
          }
        },
        {
          "calculate": "isValid(datum.HDI) ? datum.HDI : 'No data'",
          "as": "HDI_display"
        }
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "HDI",
          "type": "quantitative",
          "scale": {"type": "linear", "domain": [0, 1], 
              "scheme": {"name": "yellowgreenblue"}}
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "HDI_display",
            "type": "nominal",
            "title": "HDI"
          }
        ]
      }
    },
    {
      "mark": {"type": "geoshape", "stroke": "lightgray", "strokeWidth": 0.5},
      "data": {"graticule": true}  
    },
    {
      "mark": "text",
      "encoding": {
        "longitude": {"field": "properties.longitude", "type": "quantitative"},
        "latitude": {"field": "properties.latitude", "type": "quantitative"},
        "text": {"field": "HDI_display", "type": "nominal"},
        "color": {"value": "black"}
      }
    }
  ]
}