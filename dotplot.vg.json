{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 280,
  "height": 300,
  "title": {
    "text": "Health Dimension",
    "fontSize": 18
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mia-175/FIT3179/main/Life expectancy.csv"
  },
  "encoding": {
    "x": {
      "field": "Life expectancy",
      "type": "quantitative",
      "scale": {
        "domain": [45, 90] 
      }
    },
    "y": {
      "field": "Country",
      "type": "nominal",
      "title": null,
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      },
      "sort": {
        "field": "Life expectancy",
        "order": "descending",
        "op": "sum"
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "Country",
          "type": "nominal"
        },
        "color": {"value": "#1f77b4"}
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {"scheme": "yellowgreenblue"},
          "legend": {
            "title": null,
            "orient": "bottom",
            "direction": "horizontal"
          }
        },
        "size": {"value": 100},
        "opacity": {"value": 50},
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Life expectancy", "type": "quantitative", "title": "Life Expectancy (years)"}
        ]
      }
    }
  ],
  "config": {
    "background": "#e6f3f8"
  }
}