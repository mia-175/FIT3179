{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 280,
  "height": 300,
  "title": {
    "text": "Health Dimension",
    "fontSize": 18
  },
  "data": {
    "url": "https://raw.githubusercontent.com/mia-175/FIT3179/main/Life expectancy.csv"
  },
  "encoding": {
    "x": {
      "field": "Life expectancy",
      "type": "quantitative",
      "title": "Life Expectancy",
      "scale": {
        "domain": [45, 90] 
      }
    },
    "y": {
      "field": "Country",
      "type": "nominal",
      "title": null,
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 70,
        "domain": false
      },
      "sort": {
        "field": "Life expectancy",
        "order": "descending",
        "op": "sum"
      }
    },
    "color": {
      "field": "Gender",
      "type": "nominal",
      "scale": {
        "domain": ["Female", "Male"],
        "range": ["#e6959c", "#911a24"]  
      },
      "legend": {
        "title": null,
        "orient": "bottom",
        "direction": "horizontal",
        "columns": 4, 
        "symbolSize": 100
      }
    }
  },
  "layer": [
    {
      "mark": "line",
      "encoding": {
        "detail": {
          "field": "Country",
          "type": "nominal"
        },
        "color": {"value": "#1f77b4"}
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true
      },
      "encoding": {
        "color": {
          "field": "Gender",
          "type": "nominal",
          "scale": {
            "scheme": "yellowgreenblue",
            "reverse": true
          },
          "title": "Gender"
        },
        "size": {"value": 100},
        "opacity": {"value": 1},
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Life expectancy", "type": "quantitative", "title": "Life Expectancy"}
        ]
      }
    }
  ],
  "config": {
    "background": "#f2f2f2"
  }
}